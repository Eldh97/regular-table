{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,
        "declaration": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "esnext",
        "emitDeclarationOnly": true,
        "outDir": ".",
        "skipLibCheck": true,
        "types": [],
        "noResolve": true,
        "rootDir": "src/js"
    },
    "exclude": ["src/**/*"],
    "files": ["src/js/index.js"]
}
